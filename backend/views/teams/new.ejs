<%- include('../partials/header') -%>

  <div class="row">
    <h1 style="text-align: center">Tworzenie zespołu</h1>
    <div style="width: 50%; margin: 25px auto">
      <form action="/zespoly/dodaj" method="POST">
        <div class="form-group">
          <label for="title">Nazwa</label>
          <input required class="form-control" type="text" name="teamName" id="teamName" placeholder="Np. miotlarze" />
        </div>
        <div class="form-group">
          <label for="image">Id pracownika</label>
          <% users.forEach(function(user){ %>
            <p>
              <%= user %>
            </p>
            <% }); %>
              <input class="form-control" type="text" name="id" id="id" placeholder="Id pracownika" required />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Zapisz</button>
        </div>
      </form>
      <a href="/zespoly">Powrót</a>
    </div>
  </div>

  <%- include('../partials/footer') -%>