<%- include('./partials/header'); -%>

  <div class="container">
    <div class="row">
      <h1 style="text-align: center">Skontaktuj się z nami</h1>
      <div style="width: 50%; margin: 25px auto">
        <form action="/reports" method="POST">
          <div class="form-group">
            <label for="firstName">Imię</label>
            <input required class="form-control" type="text" name="firstName" id="firstName" placeholder="Twoje imię" />
          </div>
          <div class="form-group">
            <label for="message">Wiadomość</label>
            <textarea required class="form-control" type="text" name="message" id="message"
              placeholder="Twoja wiadomość(max. 500 znaków)" rows="8" maxlength="500"></textarea>
          </div>
          <p>
            <button type="submit">Wyślij</button>
          </p>
        </form>
      </div>
    </div>
  </div>

  <%- include('./partials/footer') -%>