<%- include('../partials/header'); -%>

  <div class="container">
    <div class="row">
      <h1 style="text-align: center">Klienci</h1>
    </div>
    <div class="row text-center flex-wrap">
      <table class="table">
        <thead>
          <tr>
            <th>Id klienta</th>
            <th>Login klienta</th>
            <th>Email</th>
            <th>Akcje</th>
          </tr>
        </thead>
        <tbody>
          <% clients.forEach(function(client){ %>
            <tr>
              <th>
                <%= client._id %>
              </th>
              <th>
                <%= client.username %>
              </th>
              <th>
                <%= client.email %>
              </th>
              <th>
                usuń, szczegóły, edytuj, wyślij wiadomość
              </th>
            </tr>
            <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <%- include('../partials/footer') -%>