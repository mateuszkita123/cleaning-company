<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Cleaning Master</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/stylesheets/main.css" />
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
          aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <a class="navbar-brand" href="/">Cleaning Master</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="
                <%=
                typeof
                page
                !==
                'undefined'
                &&
                page
                ===
                'services'
                ?
                'active'
                :
                ''
                %>
              ">
            <a href="/uslugi">Usługi</a>
          </li>
          <li class="
                <%=
                typeof
                page
                !==
                'undefined'
                &&
                page
                ===
                'contact'
                ?
                'active'
                :
                ''
                %>
              ">
            <a href="/kontakt">Kontakt</a>
          </li>
          <li class="
                <%=
                typeof
                page
                !==
                'undefined'
                &&
                page
                ===
                'users'
                ?
                'active'
                :
                ''
                %>
              ">
            <a href="/uzytkownicy">Użytkownicy</a>
          </li>
          <li class="
                <%=
                typeof
                page
                !==
                'undefined'
                &&
                page
                ===
                'incoicesData'
                ?
                'active'
                :
                ''
                %>
              ">
            <a href="/dane_do_faktur">Dane do faktur</a>
          </li>
          <li class="
                <%=
                typeof
                page
                !==
                'undefined'
                &&
                page
                ===
                'incoices'
                ?
                'active'
                :
                ''
                %>
              ">
            <a href="/faktury">Faktury</a>
          </li>
          <li class="
                <%=
                typeof
                page
                !==
                'undefined'
                &&
                page
                ===
                'teams'
                ?
                'active'
                :
                ''
                %>
              ">
            <a href="/zespoly">Zespoły</a>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if(!currentUser){ %>
            <li class="
                <%=
                typeof
                page
                !==
                'undefined'
                &&
                page
                ===
                'login'
                ?
                'active'
                :
                ''
                %>
              ">
              <a href="/login">Logowanie</a>
            </li>
            <li class="
                <%=
                typeof
                page
                !==
                'undefined'
                &&
                page
                ===
                'register'
                ?
                'active'
                :
                ''
                %>
              ">
              <a href="/register">Rejestracja</a>
            </li>
            <% } else { %>
              <li><a href="/konto/<%= currentUser._id %>">Zalogowano jako <%= currentUser.username %></a></li>
              <li><a href="/logout">Wyloguj</a></li>
              <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <% if(error && error.length> 0) { %>
      <div class="alert alert-danger">
        <p>
          <%=error %>
        </p>
      </div>
      <% } %>
        <% if(success && success.length> 0) { %>
          <div class="alert alert-success">
            <p>
              <%= success %>
            </p>
          </div>
          <% } %>
  </div>
  <div class="container"></div>
</body>

</html>